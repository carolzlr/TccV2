                        android:layout_weight="1"
                        android:text="@string/Lact"
                        android:padding="8dp" />

                    <EditText
                        android:id="@+id/rep_lact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:padding="8dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hemogl"
                        android:padding="8dp" />

                    <EditText
                        android:id="@+id/rep_hemogl"
