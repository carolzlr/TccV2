                        android:text="@string/pcp"
                        android:padding="8dp" />

                    <EditText
                        android:id="@+id/pcp_rep"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:padding="8dp" />
                </TableRow>

                <TableRow>
                    <TextView
