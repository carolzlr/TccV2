                        android:padding="8dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/obs"
                        android:padding="8dp" />

                    <EditText
                        android:id="@+id/obs_rep"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:padding="8dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/tv_dataHora"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hora"
                        android:padding="8dp" />

                    <EditText
                        android:id="@+id/dataHora_rep"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="time"
                        android:padding="8dp" />
                </TableRow>


                <TableRow>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_repetir"
                        style="@style/Button"
                        android:text="@string/rep"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_dataHora" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_finaliza"
                        style="@style/Button"
                        android:text="@string/fim"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dataHora" />
                </TableRow>


            </TableLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>